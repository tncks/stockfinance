{
  "version": 2,
  "builds": [
    {
      "src": "packages/server/server.js",
      "use": "@vercel/node"
    },
    {
      "src": "packages/webapp/package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "dist" }
    }
  ],
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/packages/server/server.js"
    }
  ]
}